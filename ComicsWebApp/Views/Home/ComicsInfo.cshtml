@model ComicsWebApp.Models.ComicsViewModel
@using ComicsWebApp.Utilities

@{
    ViewData["Title"] = "ComicsInfo";
    var color = "black";
    if (Model.Comics.AvailabilityStatus.Equals(ComicsAvailabilityStatus.InStock))
    {
        color = "green";
    }
    else if (Model.Comics.AvailabilityStatus.Equals(ComicsAvailabilityStatus.SoldOut))
    {
        color = "red";
    }
}

<head>
    <link rel="stylesheet" href="~/css/ComicsInfo.css" asp-append-version="true" />
</head>

<h1>Comics Details</h1>

<hr />

<div class="modal fade" id="addPagesModal" tabindex="-1" role="dialog" 
    aria-labelledby="addPagesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form enctype="multipart/form-data" method="post" asp-controller="Home" asp-route-id="@Model.Comics.Id" asp-action="AddPages">
                <div class="modal-header">
                    <h5 class="modal-title" id="AddPagesModalLabel">Add Comics Pages</h5>
                    <button id="closeAddPagesModalButton" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                    <label asp-for="ListOfPages" class="control-label">Add Pages</label>
                    <input asp-for="ListOfPages" class="form-control" type="file" name="pagesFiles" multiple />
                </div>
                <div class="modal-footer">
                    <input id="cancelAddPagesModalButton" type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
                    <input id="submitAddPagesModalButton" type="Submit" class="btn btn-success" value="Add" />
                </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="flex-container">
    <img src="@Url.Action("RenderPhoto", "Home", new {id = Model.Comics.Id })" class="main-image" height="440" width="290"/>
    <div class="flex-info-box">
        <div class="flex-container-space-between">
            <div class="flex-container-column-direction">
                <div style="color: @color;">@Model.Comics.AvailabilityStatus.GetDisplayName()</div>
                <h3>@Model.Comics.Name</h3>
            </div>
            <button type="button" class="btn btn-success button-edit">Edit</button>
        </div>
        <div class="flex-container-space-between">
            <div>
                <h3>$@Model.Comics.Price</h3>
                <div>Written by @Model.Comics.Author</div>
                <div><span class="span-bold">Publisher:</span> @Model.Comics.Publisher</div>
                <div>
                    <span class="span-bold">Genres:</span>
                    @foreach (var genre in Model.ListOfGenres)
                    {
                        <a href="">@genre.GenreName</a>
                    }
                </div>
            </div>
            <button id="showAddPagesModalButton" type="button" class="btn btn-primary button-pages" data-toggle="modal" data-target="#addPagesModal">
                Add Pages
            </button>
        </div>
    </div>
</div>

<h3>Description</h3>
<div>@Model.Comics.Description</div><br />

<div><span class="span-bold">Number of pages:</span> @Model.Comics.PagesNumber</div>
<div><span class="span-bold">Publication Format:</span> @Model.Comics.PublicationFormat</div>
<div><span class="span-bold">Cover Type:</span> @Model.Comics.CoverType</div>
<div><span class="span-bold">Year of publication:</span> @Model.Comics.YearOfPublication</div>
<div><span class="span-bold">Language:</span> @Model.Comics.Language</div>
<br /><br />

@if (Model.ListOfPages.Count > 0)
{
    <div id="imageCarousel" class="carousel slide" data-ride="carousel" style="width: 690px; height: 300px">
        <div class="carousel-inner" role="listbox" style="width: 690px; height: 300px">
            @*@foreach (var comicsPage in Model.ListOfPages)
            {
                <div class="carousel-item">
                  <img  src="@Url.Action("RenderPage", "Home", new {id = comicsPage.Id })" alt="First slide" style="width: 200px;height: 200px"/>
                </div>
            }*@
            <div class="carousel-item">
              <img class="w-100" src="http://static.flickr.com/75/199481072_b4a0d09597_s.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="w-100" src="http://static.flickr.com/66/199481236_dc98b5abb3_s.jpg" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide One');"></div>
            <div class="carousel-caption">
                <h2>Caption 1</h2>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');"></div>
            <div class="carousel-caption">
                <h2>Caption 2</h2>
            </div>
        </div>
        <div class="item">
            <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');"></div>
            <div class="carousel-caption">
                <h2>Caption 3</h2>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

